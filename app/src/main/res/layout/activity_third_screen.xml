<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdScreen">

    <TextView
        android:id="@+id/ettShowdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle"
        android:hint="Enter Date of Show"
        android:inputType="date"
        android:padding="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettNoOfSeat" />

    <TextView
        android:id="@+id/ettNoOfSeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rectangle"
        android:hint="Enter Number of Seats"
        android:inputType="phone"
        android:padding="15sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettEmail" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidehoris1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.11354309"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/viewt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toTopOf="@+id/guidehoris1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaders1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Booking-3"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@id/viewt"
        app:layout_constraintEnd_toEndOf="@id/viewt"
        app:layout_constraintStart_toStartOf="@id/viewt"
        app:layout_constraintTop_toTopOf="@id/viewt" />

    <TextView
        android:id="@+id/ettFirstName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="26dp"
        android:background="@drawable/rectangle"
        android:padding="15sp"
        android:text="First Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidehoris1" />

    <TextView
        android:id="@+id/ettLastName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="24sp"
        android:background="@drawable/rectangle"
        android:padding="15sp"
        android:text="Last Name"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettFirstName" />

    <TextView
        android:id="@+id/ettEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="45sp"
        android:layout_marginTop="24sp"
        android:background="@drawable/rectangle"
        android:padding="15sp"
        android:text="Email ID"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ettLastName" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="75sp"
        android:layout_marginTop="45sp"
        android:background="@drawable/rectangle"
        android:padding="10sp"
        android:text="Confirm"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ettShowdate" />
</androidx.constraintlayout.widget.ConstraintLayout>